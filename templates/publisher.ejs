<!DOCTYPE html>
<html lang=en-US>
  <head>
    <meta charset=UTF-8>
    <meta name=viewport content="width=device-width, initial-scale=1">
    <title><%= publisher %> | Common Form</title>
    <link rel=stylesheet href=/normalize.css>
    <link rel=stylesheet href=/fonts.css>
    <link rel=stylesheet href=/styles.css>
  </head>
  <body>
    <header role=banner>
      <a href=/><img alt="Common Form logotype" src=/logo.svg></a>
      <h1>Common Form</h1>
      <p>a free, open repository of legal forms</p>
    </header>
    <main role=main>
      <h2><%= publisher %></h2>
      <% if (about) { %>
      <%- about %>
      <% } %>
      <% if (hasCompleteForms) { %>
      <h3>Forms</h3>
      <ul>
        <% Object.keys(projects).forEach((project) => { %>
        <% if (projects[project].component === false) { %>
        <li>
          <a href=./<%= project %>><%= project %></a>
          <%- projects[project].description %>
        </li>
        <% } %>
        <% }) %>
      </ul>
      <% } %>
      <% if (hasComponents) { %>
      <h3>Components</h3>
      <ul>
        <% Object.keys(projects).forEach((project) => { %>
        <% if (projects[project].component === true) { %>
        <li>
          <a href=./<%= project %>><%= project %></a>
          <%- projects[project].description %>
        </li>
        <% } %>
        <% }) %>
      </ul>
      <% } %>
      <h3>About</h3>
      <table>
        <% if (name) { %>
        <tr>
          <th>Name</th>
          <td><%= name %></td>
        </tr>
        <% } %>
        <tr>
          <th>Type</th>
          <td><%= type %></td>
        </tr>
        <% if (email) { %>
        <tr>
          <th>E-Mail</th>
          <td><a href="mailto:<%= email %>"><%= email %></a></td>
        </tr>
        <% } %>
        <% if (website) { %>
        <tr>
          <th>Website</th>
          <td><a href="<%= website %>"><%= website %></a></td>
        </tr>
        <% } %>
        <% if (location) { %>
        <tr>
          <th>Location</th>
          <td><%= location %></td>
        </tr>
        <% } %>
        <% if (trademarks) { %>
        <tr>
          <th>Trademarks</th>
          <td>
            <ul>
              <% trademarks.forEach((number) => { %>
              <li><a href="https://tsdr.uspto.gov/#caseNumber=<%= number %>&caseSearchType=US_APPLICATION&caseType=DEFAULT&searchType=statusSearch"><%= number %></a></li>
              <% }) %>
            </ul>
          </td>
        </tr>
        <% } %>
      </table>
    </main>
    <footer role=contentinfo></footer>
  </body>
</html>
